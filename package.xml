<?xml version="1.0" encoding="UTF-8"?>
<package name="de.niklas-schmitt.wcf.keybase_profile" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/maelstrom/package.xsd">
	<packageinformation>
		<packagename>Keybase.io profile information</packagename>
		<packagename language="de">Keybase.io Profilinformationen</packagename>
		<packagedescription>Adds a link to Keybase.io-pofile to contact options.</packagedescription>
		<packagedescription language="de">Fügt einen Link zum Keybase.io-Profil in den Kontaktmöglichkeiten hinzu.</packagedescription>
		<version>1.0.0</version>
		<date>2016-10-22</date>
	</packageinformation>

	<authorinformation>
		<author>Niklas Schmitt</author>
		<authorurl>http://www.niklas-schmitt.de</authorurl>
	</authorinformation>

	<requiredpackages>
		<requiredpackage minversion="4.0.0">com.woltlab.wbb</requiredpackage>
		<requiredpackage minversion="2.0.0">com.woltlab.wcf</requiredpackage>
	</requiredpackages>

	<excludedpackages>
		<excludedpackage version="2.2.0">com.woltlab.wcf</excludedpackage>
	</excludedpackages>

	<instructions type="install">
		<instruction type="file">files.tar</instruction>
		<instruction type="language">language/*.xml</instruction>
		<instruction type="userOption">userOption.xml</instruction>
	</instructions>

	<instructions type="update" fromversion="*">
		<instruction type="file">files.tar</instruction>
		<instruction type="language">language/*.xml</instruction>
		<instruction type="userOption">userOption.xml</instruction>
	</instructions>
</package>
